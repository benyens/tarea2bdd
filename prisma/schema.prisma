generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
 
model usuarios {
  direccion_correo String @id 
  nombre_usuario String
  contrasena String
  descripcion String
  bloqueado Boolean @default(false)
  fecha_creacion DateTime @default(now())
  correosEnviados correos[] @relation(name: "CorreoRemitente")
  correosRecibidos correos[] @relation(name: "CorreoDestinatario")
  direcciones_favoritas direcciones_favoritas[]
  direcciones_bloqueadas direcciones_bloqueadas[]
}

model correos {
  id Int @id @default(autoincrement())
  remitenteId String // clave for치nea
  destinatarioId String // clave for치nea
  fecha_envio DateTime @default(now())

  remitente usuarios @relation(name: "CorreoRemitente", fields: [remitenteId], references: [direccion_correo])
  destinatario usuarios @relation(name: "CorreoDestinatario", fields: [destinatarioId], references: [direccion_correo])
}

model direcciones_favoritas {
  id Int @id @default(autoincrement())
  usuarioId String// clave for치nea
  direccion_favorita String

  usuario usuarios @relation(fields: [usuarioId], references: [direccion_correo])
}

model direcciones_bloqueadas {
  id Int @id @default(autoincrement())
  usuarioId String // clave for치nea
  direccion_bloqueada String

  usuario usuarios @relation(fields: [usuarioId], references: [direccion_correo])
}
 
